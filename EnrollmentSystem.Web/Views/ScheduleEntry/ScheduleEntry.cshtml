@model EnrollmentSystem.Web.Models.Database.SubjectSched
@{
    ViewData["Title"] = "Schedule Entry";
}

<form method="post" asp-action="SubmitSched">
    <div class="mb-3">
        <label for="EdpCodeInput" class="form-label">Edp Code</label>
        <input type="number" class="form-control" id="EdpCodeInput" asp-for="EdpCode" required>
        <span asp-validation-for="EdpCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="subjectCodeInput" class="form-label">Subject Code</label>
        <select id="subjectCodeInput" class="form-select" asp-for="SubjectCode" required>
            <option value="">Choose Subject Code</option>
            @foreach (var subject in ViewBag.Subjects)
            {
                <option value="@subject.SubjectCode">@subject.SubjectCode</option>
            }
        </select>
        <span asp-validation-for="SubjectCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="StartTimeInput" class="form-label">Start Time</label>
        <input type="time" class="form-control" id="StartTimeInput" asp-for="StartTime" required>
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="EndTimeInput" class="form-label">End Time</label>
        <input type="time" class="form-control" id="EndTimeInput" asp-for="EndTime" required>
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="daysInput" class="form-label">Days</label>
        <input type="text" class="form-control" id="daysInput" name="Days" placeholder="Enter days (e.g., MTWTF)">
        <span asp-validation-for="Days" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="roomInput" class="form-label">Room</label>
        <input type="text" class="form-control" id="roomInput" asp-for="Room" required>
        <span asp-validation-for="Room" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="maxSizeInput" class="form-label">Max Size</label>
        <input type="number" class="form-control" id="maxSizeInput" asp-for="MaxSize" required>
        <span asp-validation-for="MaxSize" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Status" value="Active" asp-for="Status" checked>
            <label class="form-check-label">Active</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Status" value="Inactive" asp-for="Status">
            <label class="form-check-label">Inactive</label>
        </div>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">XM</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="XM" value="AM" asp-for="XM" checked>
            <label class="form-check-label">AM</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="XM" value="PM" asp-for="XM">
            <label class="form-check-label">PM</label>
        </div>
        <span asp-validation-for="XM" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="sectionInput" class="form-label">Section</label>
        <input type="text" class="form-control" id="sectionInput" asp-for="Section" required>
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="schoolYearInput" class="form-label">School Year</label>
        <input type="number" class="form-control" id="schoolYearInput" asp-for="SchoolYear" required>
        <span asp-validation-for="SchoolYear" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<script>
    function validateForm() {
        var startTime = document.getElementById("StartTimeInput").value;
        var endTime = document.getElementById("EndTimeInput").value;

        if (startTime >= endTime) {
            alert("End time must be greater than start time.");
            return false; // Prevent form submission
        }

        return true; // Allow form submission
    }
</script>
