@model EnrollmentSystem.Web.Models.Database.SubjectSched

<form method="post" asp-action="SubmitSched">
    <div class="mb-3">
        <label for="EdpCodeInput" class="form-label">Edp Code</label>
        <input type="number" class="form-control" id="EdpCodeInput" asp-for="EdpCode" required>
    </div>
    <div class="mb-3">
        <label for="SubjectCodeInput" class="form-label">Subject Code</label>
        <input type="text" class="form-control" id="SubjectCodeInput" asp-for="SubjectCode" required>
    </div>
    <div class="mb-3">
        <label for="StartTimeInput" class="form-label">Start Time</label>
        <input type="text" class="form-control" id="StartTimeInput" asp-for="StartTime" required>
    </div>
    <div class="mb-3">
        <label for="EndTimeInput" class="form-label">End Time</label>
        <input type="text" class="form-control" id="EndTimeInput" asp-for="EndTime">
    </div>
    <div class="mb-3">
        <label for="courseInput" class="form-label">Days</label>
        <input type="text" class="form-control" id="courseInput" asp-for="Days" required>
    </div>
    <div class="mb-3">
        <label for="yearInput" class="form-label">Room</label>
        <input type="text" class="form-control" id="yearInput" asp-for="Room" required>
    </div>
    <div class="mb-3">
        <label for="remarksSelect" class="form-label">Remarks</label>
        <select id="remarksSelect" class="form-select" asp-for="Remarks">
            <option value="" selected>Choose Remarks</option>
            <option value="Shiftee">Shiftee</option>
            <option value="Transferee">Transferee</option>
            <option value="New">New</option>
            <option value="Old">Old</option>
            <option value="Cross-Enroll">Cross-Enroll</option>
        </select>
    </div>
    <div class="mb-3 mt-4">
        <label class="form-label d-block mb-2">Status:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Status" id="flexRadioDefault1" value="Active" checked>
            <label class="form-check-label" for="flexRadioDefault1">
                Active
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Status" id="flexRadioDefault2" value="Inactive">
            <label class="form-check-label" for="flexRadioDefault2">
                Inactive
            </label>
        </div>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
